<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.downloads.DownloadsPageFragment">


    <Button
        android:id="@+id/downloaded_settings"
        android:layout_width="55dp"
        android:layout_height="50dp"
        app:icon="@drawable/setting"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:text="@string/downloads"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:gravity="start"
        android:pointerIcon="arrow"
        app:cornerRadius="@android:dimen/app_icon_size"
        android:tooltipText="@string/exit_this_page"
        app:icon="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:targetApi="o" />


    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingEnd="15dp"
        android:paddingStart="0dp"
        app:layout_constraintBottom_toTopOf="@+id/downloadedHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/list_videos"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/videos"
            android:tooltipText="@string/videos"
            android:layout_gravity="start"
            app:icon="@drawable/smart_display_24dp"
            tools:ignore="UnusedAttribute" />


        <Button
            android:id="@+id/list_audios"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="@string/audios"
            android:tooltipText="@string/audios"
            android:layout_gravity="end"
            app:icon="@drawable/music_note_24dp"
            tools:ignore="UnusedAttribute" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ListView
        android:id="@+id/downloadedHistory"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/downloaded_list_item" />


</androidx.constraintlayout.widget.ConstraintLayout>