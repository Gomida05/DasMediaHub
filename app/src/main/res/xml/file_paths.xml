<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Allow sharing files from the external storage -->
    <external-path
        name="external_files"
        path="." />

    <!-- Alternatively, for specific directory, e.g., music directory -->
    <external-path
        name="music_files"
        path="Music" />
    <external-path
        name="video_file"
        path="Movies"/>
</paths>
